{
  "version": 1,
  "sensitive_exact_paths": [
    "~/.codex/config.toml",
    "~/.pm/state.db",
    "~/.aws/credentials",
    "~/.npmrc",
    "~/.netrc",
    "~/.claude.json",
    "~/.config/gh/hosts.yml"
  ],
  "sensitive_path_globs": [
    "*/.env.secrets",
    "*/.env.local-secrets",
    "*/.env.team-secrets",
    "*/.ssh/id_*"
  ],
  "sensitive_path_patterns": ["\\.pem$", "\\.key$", "_rsa$", "\\.p12$", "credentials\\.json$"],
  "secret_token_patterns": [
    { "name": "GitHub PAT (classic)", "pattern": "ghp_[A-Za-z0-9_]{36}" },
    { "name": "GitHub PAT (fine-grained)", "pattern": "github_pat_[A-Za-z0-9_]{22,}" },
    { "name": "GitHub OAuth", "pattern": "gho_[A-Za-z0-9_]{36}" },
    { "name": "GitHub App Token", "pattern": "ghs_[A-Za-z0-9_]{36}" },
    { "name": "GitHub Refresh", "pattern": "ghr_[A-Za-z0-9_]{36}" },
    { "name": "Supabase PAT", "pattern": "sbp_[A-Za-z0-9]{40}" },
    { "name": "OpenAI/Anthropic Key", "pattern": "sk-[A-Za-z0-9_-]{20,}" },
    { "name": "Bearer Token", "pattern": "Bearer[[:space:]]+[A-Za-z0-9_.+/=-]{20,}" },
    { "name": "Infisical Token", "pattern": "st\\.[A-Za-z0-9_-]{20,}" },
    { "name": "AWS Access Key", "pattern": "AKIA[0-9A-Z]{16}" },
    { "name": "AWS Temporary Key", "pattern": "ASIA[0-9A-Z]{16}" },
    { "name": "Generic Long Base64", "pattern": "[A-Za-z0-9+/]{64,}={0,3}", "min_unique_chars": 3 }
  ]
}
